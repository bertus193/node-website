<!doctype html>
<html>
  
<% include header.ejs%>

<body onload="cargarGaleria('/functions/verGaleria?page=<%= currentPage %>')">
   <script>
      function cargarGaleria(url){
         fetch(url, {
            method: 'GET',
            query: { page: 1 }
          }).then(function(res) {
              return res.text();
          }).then(function(body) {
              document.getElementById("verGaleria").innerHTML = body;
          });
      }
      function deleteImage(url,enlace) {
         if(confirm("¿Deseas borrar la imagen?") == true){
           fetch(url, {
             method: 'GET'
            }).then(function(response){
                var box = document.getElementById('deleteOK');
                box.innerHTML="<div class='alert alert-dismissible alert-success'><i class='fa fa-check' aria-hidden='true'></i> La imagen ha sido eliminada correctamente.</div>";
            })
         }
         
      }
   </script>
<div class="container">
    <div class="jumbotron text-center">
         <span id="deleteOK"></span>
      
         <h1><span class="fa fa-picture-o"></span> HostIMG</h1>
         <h3>Galería de imágenes</h3>
        <div id="verGaleria"> Cargando galería... </div>
   
   </div>
</div>
</body>
</html>